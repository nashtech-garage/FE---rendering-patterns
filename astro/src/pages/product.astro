---
import Slider from "@/components/slider";
import HotProduct from "@/components/product";
import Buy from "@/components/buy";
import Review from "@/components/review";
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Product">
  <div class="flex space-x-4">
    <div class="w-1/3">
      <Slider client:load /> <!-- Island Dynamic & Progressive Hydration - First -->
    </div>
    <div class="w-2/3">
      <Buy /> <!-- Island Static -->
    </div>
  </div>
  <HotProduct />
  <section class="my-4 w-full">
    <h2 class="my-2">REVIEW</h2>
    {Array.from({length: 1000}, (_, i) => i + 1).map(i => (<Review client:visible id={i} />))} <!-- Island Dynamic & Selective Hydration - Suspended until visible -->
  </section>
</Layout>